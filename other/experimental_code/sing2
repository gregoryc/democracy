(lyrics -a "$1" -s   "$2"        |         squeeze 1  0                    |ruby -e 'puts ("#{STDIN.read.strip.encode(:ascii.to_s, invalid: :replace, undef: :replace, replace: String.new)} ".scan(/\s*.{1,100}\s/m).map(&:strip).to_a.each do |i| require "colored";       puts i.underline.green; `       google_speak #{i.gsub(/\s/, " ").dump}`; end)'                                       )                               2>/dev/null